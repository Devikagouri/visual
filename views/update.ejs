<!DOCTYPE html>
<html>
    <head>
        <title>Update Details</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');
            *{
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: 'Poppins',sans-serif;
            }
            body
            {
                margin-top:50px;
                background-image: url("https://papers.co/wallpaper/papers.co-at43-apple-mac-white-logo-minimal-art-illustration-29-wallpaper.jpg");
                background-repeat: no-repeat;
                background-size: cover;
                margin-left: 350px;
            }
            .card 
            {
                margin-bottom: 1.5rem;
                box-shadow: 0 1px 15px 1px rgba(52,40,104,.08);
            }
                .card {
                position: relative;
                display: -ms-flexbox;
                display: flex;
                -ms-flex-direction: column;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 1px solid #e5e9f2;
                border-radius: .2rem;
                }
                .card-header:first-child {
                border-radius: calc(.2rem - 1px) calc(.2rem - 1px) 0 0;
                }
                .card-header {
                border-bottom-width: 1px;
                }
                .card-header {
                padding: .75rem 1.25rem;
                margin-bottom: 0;
                color: inherit;
                background-color: #fff;
                border-bottom: 1px solid #e5e9f2;
                }
                .btn-warning{
                    position: relative;
                    padding: 11px 16px;
                    font-size: 15px;
                    line-height: 1.5;
                    border-radius: 3px;
                    color: #fff;
                    background-color: #008cff;
                    border: 0;
                    transition: 0.2s;
                    overflow: hidden; 
                  }
                  
                  .btn-warning input[type = "file"]{
                    cursor: pointer;
                    position: absolute;
                    left: 0%;
                    top: 0%;
                    transform: scale(3);
                    opacity: 0;
                  }
                  
                  .btn-warning:hover{
                    background-color: #005ed9;
                  }
        </style>
    </head>
    <body>
        <div class="container p-0">
            
            <div class="col-md-7 col-xl-8">
            <div class="tab-content">
            <div class="tab-pane fade show active" id="account" role="tabpanel">
            <div class="card">
            <div class="card-header">
            <div class="card-actions float-right">
            <div class="dropdown show">
            <a href="#" data-toggle="dropdown" data-display="static">
            
            </a>
           
            </div>
            </div>
            <h5 class="card-title mb-0" style="font-size: 30px;">Update Details</h5>
            </div>
            <div class="card-body">
            <form id="updateForm">
            <div class="row">
            <div class="col-md-8">
            <div class="form-group">
            <label for="inputUsername">Username</label>
            <input type="text" class="form-control" id="inputUsername" placeholder="Username" name="username">
            <p id="check_username"></p>
            </div><br>
            <div class="form-group">
            <label for="inputUsername">Biography</label>
            <textarea rows="2" class="form-control" id="inputBio" placeholder="Tell something about yourself" name="biography"></textarea>
            </div><br>
            <div class="form-row">
                <div class="form-group col-md-6">
                <label for="inputFirstName">Full name</label>
                <input type="text" class="form-control" id="inputFirstName" placeholder="Full name" name="fullname">
                </div><br>
                </div>
                <div class="form-group">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
                </div>
                <p id="check_email"></p><br>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" id="location" placeholder="Location" name="location">
                    </div><br>
                    <div class="form-group">
                        <label for="phno">Phone Number</label>
                        <input type="string" class="form-control" id="phno" placeholder="Phone Number" length="10" name="phno">
                        </div>
                        <p id="check_phno"></p><br>
                <div class="form-group">
                    <label for="inputPasswordNew">New password</label>
                    <input type="password" class="form-control" id="inputPasswordNew" name="newPW">
                    </div><br>
            </div>
            <div class="col-md-4">
            <div class="text-center">
            <img alt="Andrew Jones" src="https://t3.ftcdn.net/jpg/06/19/26/46/360_F_619264680_x2PBdGLF54sFe7kTBtAvZnPyXgvaRw0Y.jpg" class="rounded-circle img-responsive mt-2" width="128" height="128">
            <div class="mt-2">
            
              <div class="upload">
                <button type = "button" class = "btn-warning">
                  <i class = "fa fa-upload"></i> Upload File
                  <input type="file" name="profile_image">
                </button>
              </div>
            </div>
            </div>
            </div>
            </div>
            <button type="submit" class="btn btn-primary" style="background: linear-gradient(135deg, #71b7e6, #9b59b6);">Save changes</button>
            </form>
            </div>
            </div>
            
            </div>
            </div>
            </div>
            </div>
            </div>
            </div>
            </div>  
            

            
        <script>
            document.getElementById('updateForm').addEventListener('submit',async function(event){
                event.preventDefault();
                const image = document.getElementsByName('profile_image')[0].files[0];
                const username = document.getElementsByName('username')[0].value;
                const bio = document.getElementsByName('biography')[0].value;
                const fullname = document.getElementsByName('fullname')[0].value;
                const email = document.getElementsByName('email')[0].value;               
                const location = document.getElementsByName('location')[0].value;
                const phno = document.getElementsByName('phno')[0].value;
                const password = document.getElementsByName('newPW')[0].value;
                const token = localStorage.getItem("token");
          
                const arr = {image,fullname,username,email,password,phno,location,bio,token};
                console.log(arr);
                const obj = JSON.stringify(arr);
                const response = await fetch('/update',{
                  method: 'POST',
                  headers: {
                    'Content-type': 'application/json'
                  },
                  body: obj
                }).catch(console.error);
          
                if(response.redirected){
                  window.location.href = response.url;
                }
            

            const responseText = await response.text();
            const myobj = JSON.parse(responseText);
            document.getElementById('check_username').innerHTML = myobj.uname;
            document.getElementById('check_email').innerHTML = myobj.mail;
            document.getElementById('check_phno').innerHTML = myobj.ph;
            window.confirm(myobj.success);

           
      


            });
        </script>
    </body>
</html>